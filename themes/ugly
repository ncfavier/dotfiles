dark=0

if (( dark )); then
    background=$color0
    foreground=$color15
    background_alt=$color8
    foreground_alt=$color7
else
    background=$color15
    foreground=$color0
    background_alt=$color7
    foreground_alt=$color8
fi

font='Dina'
font_size=10

X_font="xft:$font:pixelsize=$font_size, xft:Biwidth:pixelsize=12, xft:Symbola:pixelsize=12"
bar_font=("$font:pixelsize=$font_size" "$font:bold:pixelsize=$font_size" "Biwidth:pixelsize=12" "siji:pixelsize=10")
firefox_font="${font@Q}, Biwidth"

