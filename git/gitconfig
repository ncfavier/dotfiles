    autoStash = true
    autoSquash = true

[diff]
    submodule = log

[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold

[color "diff"]
    meta = cyan
    new = green
    old = red

[alias]
    i = init
    s = status
    d = diff
    dh = diff HEAD
    dc = diff --cached
    do = diff origin
    b = branch
    a = add
    aa = add -A
    au = add -u
    track = add -N
    c = "!git commit --allow-empty-message -m \"$*\" #"
    ca = "!git commit --allow-empty-message -am \"$*\" #"
    ce = commit --edit
    cf = !git commit -m \"$(fortune -sn 60 | tr -s '[:space:]' '[ *]')\"
    co = checkout
    r = reset
    p = push
    pa = push --all
    pl = pull
    cl = clone
    cl1 = clone --depth=1
    l = log --graph --oneline
    la = log --graph --oneline --all
    sw = switch
